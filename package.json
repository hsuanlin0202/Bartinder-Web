    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^12.12.21",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "typescript": "4.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "tailwindcss": "^2.0.4",
